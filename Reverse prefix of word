class Solution {
    public String reversePrefix(String word, char ch) {
        StringBuilder s=new StringBuilder();
        if(word.contains(ch+"")){
        int limit=word.indexOf(ch+"");
s.append(word.substring(0,limit+1));
s.reverse();
s.append(word.substring(limit+1));
return s.toString();
        }
        return word;
    }
}
